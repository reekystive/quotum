{
  "name": "@quotum/app-quotum-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:watch:web": "nodemon --quiet --watch '../../apps-server/trpc-server/dist/**/*' --ext js,mjs --exec 'pnpm run dev'",
    "dev:watch": "concurrently --prefix-colors red.dim,yellow.dim --names web,server --pad-prefix 'pnpm run dev:watch:web' 'pnpm run build:tsc:watch --preserveWatchOutput'",
    "build": "next build",
    "build:tsc": "tsc --build tsconfig.json",
    "build:tsc:watch": "tsc --build tsconfig.json --watch",
    "build:tsc:deps": "pnpm --workspace-concurrency -1 --filter '@quotum/app-quotum-web...' run build:tsc",
    "build:opennext": "opennextjs-cloudflare build",
    "preview": "opennextjs-cloudflare preview",
    "lint:eslint": "eslint . --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/eslintcache.json --max-warnings 0 --report-unused-disable-directives",
    "lint:tsc": "tsc --build tsconfig.json --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "predeploy:dev": "pnpm run build:opennext",
    "deploy:dev": "wrangler deploy",
    "typegen:cloudflare": "wrangler types --env-interface CloudflareEnv ../../packages/app-types/quotum-cloudflare.d.ts",
    "db:migrate:local:list": "wrangler d1 migrations apply quotum-dev --local",
    "db:migrate:local:apply": "wrangler d1 migrations apply quotum-dev --local"
  },
  "dependencies": {
    "@quotum/tailwindcss": "workspace:^",
    "@quotum/utils": "workspace:^",
    "@opennextjs/cloudflare": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@react-hookz/web": "catalog:",
    "@simplewebauthn/browser": "catalog:",
    "@simplewebauthn/server": "catalog:",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "class-variance-authority": "catalog:",
    "js-cookie": "catalog:",
    "lucide-react": "catalog:",
    "next": "catalog:",
    "next-auth": "catalog:",
    "next-themes": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "universal-cookie": "catalog:",
    "usehooks-ts": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@quotum/app-trpc-server": "workspace:^",
    "@quotum/app-types": "workspace:^",
    "@quotum/tsconfig": "workspace:^",
    "@playwright/test": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "@types/js-cookie": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "concurrently": "catalog:",
    "nodemon": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
