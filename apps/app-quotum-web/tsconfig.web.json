{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@quotum/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "types": ["@quotum/app-types/quotum-cloudflare", "@quotum/app-types/quotum-nextjs-globals"],
    "rootDir": ".",
    "outDir": "./node_modules/.cache/tsc-web",
    // https://github.com/microsoft/TypeScript/issues/30925#issuecomment-483371766
    "tsBuildInfoFile": "./node_modules/.cache/tsc-web/tsconfig.web.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    // required by nextjs
    "noEmit": true
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules/", "**/__tests__/"]
}
