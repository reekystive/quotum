{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@quotum/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "types": ["node", "@quotum/app-types/quotum-cloudflare", "@quotum/app-types/quotum-nextjs-globals"],
    "rootDir": ".",
    "outDir": "./node_modules/.cache/tsc-tests",
    // https://github.com/microsoft/TypeScript/issues/30925#issuecomment-483371766
    "tsBuildInfoFile": "./node_modules/.cache/tsc-tests/tsconfig.tests.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src", "**/__tests__/", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules/"]
}
